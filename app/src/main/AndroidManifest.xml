<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projects.saadias.test">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SuratAlkahf"
            android:parentActivityName=".Sedirah_menu"
            android:label="ســـــــــورة الكهـــــــف">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sedirah_menu"
            android:label="@string/title_activity_sedirah_menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MorningPrayer"
            android:label="@string/title_activity_morning_prayer"
            android:parentActivityName=".Sedirah_menu">
        </activity>
        <activity
            android:name=".EveningPrayer"
            android:label="أذكــــــــار ألمســـــــاء"
            android:parentActivityName=".Sedirah_menu">
        </activity>
    </application>

</manifest>
